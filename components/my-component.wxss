.scroll_container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
}

.tempImg {
  width: 96vw;
  height: 220rpx;
  display: block;
  margin: 30rpx auto;
  margin-top: 0;
}

.temp .scroll_img {
  /* width: 30vw;
  height: 30vw; */
  width: 100%;
  height: 30vw;
}

.temp .scroll_name {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.temp .scroll_price {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  padding-right: 10rpx;
}

.temp .scroll_box {
  /* padding: 14rpx; */
  width: 30vw;
  height: auto;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.temp .scroll_btn {
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  font-size: 24rpx;
  color: #fff;
  background-color: #ff8b07;
}

.temp .scroll_newPrice {
  color: #ff8b07;
  font-size: 32rpx;
}

.temp .scroll_oldPrice {
  color: #a5a5a5;
  text-decoration-line: line-through;
  font-size: 24rpx;
}
