.banner_container .slide-image {
  width: 80%;
  height: 80%;
  margin-left: 10%;
}

.banner_container swiper {
  height: 560rpx;
}

.nameAndPrice {
  text-align: center;
  margin-top: 20rpx;
  box-sizing: border-box;
  width: 100%;
  border-bottom: 2rpx solid #ebebeb;
  padding-bottom: 20rpx;
}

.nameAndPrice>text:first-child {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 36rpx;
  width: 80%;
  margin: 20rpx auto;
}

.nameAndPrice>text:last-child {
  color: #ee7e59;
  font-size: 40rpx;
}

.shopLocation {
  padding-top: 20rpx;
}

.shopLocation>image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 60rpx;
  margin-right: 10rpx;
}

.shopLocation>text {
  font-size: 32rpx;
  color: #545454;
  vertical-align: middle;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 120rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  width: 100%;
}

.footer_container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.footer_container image {
  height: 60rpx;
  width: 60rpx;
}

.priceBox {
  border-left: 2rpx solid #ebebeb;
  font-size: 28rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.total {
  color: #000;
}

.less {
  color: #b9b9b9;
}

.button {
  height: 80rpx;
  background-color: #fb6a3e;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 36rpx;
  width: 240rpx;
}

.itemNum {
  position: fixed;
  left: 85rpx;
  bottom: 45rpx;
  color: #fff;
  background-color: rgb(113, 185, 5);
  width: 40rpx;
  height: 40rpx;
  font-size: 28rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  border: 4rpx solid #fff;
}
