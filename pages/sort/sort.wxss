.header_container {
  width: 100vw;
  height: 80rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  z-index: 99;
  position: fixed;
  top: 0;
  left: 0;
}

.location_box {
  width: 320rpx;
  display: flex;
  height: 60rpx;
  align-items: center;
  font-size: 32rpx;
  white-space: nowrap;
}

.location_box text {
  overflow: hidden;
  text-overflow: ellipsis;
}

.location_icon {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
}

.header_middle {
  flex: 2;
  display: flex;
  justify-content: flex-end;
}

.search_box {
  width: 320rpx;
  height: 60rpx;
  font-size: 28rpx;
  border: 2rpx solid #ccc;
  color: #ccc;
  padding-left: 30rpx;
  line-height: 60rpx;
}

.mainBox {
  display: flex;
  box-sizing: border-box;
}

.mainBox_left {
  flex-shrink: 0;
}

.mainBox_right {
  flex-grow: 2;
}

.scroll_left {
  height: 100vh;
  width: 200rpx;
  background-color: #f8f8f8;
  color: #3d3d3d;
  box-sizing: border-box;
  padding-top: 80rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.first_list {
  height: 40rpx;
  width: 100%;
  line-height: 40rpx;
  font-size: 36rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 30rpx;
}

.first_active {
  border-left: 10rpx solid #f66b34;
  color: #f66b34;
  background-color: #fff;
  padding-left: 20rpx;
  box-shadow: 0 -20rpx 0 #fff, 0 20rpx 0 #fff;
}

.second_list {
  height: 40rpx;
  width: 100%;
  line-height: 40rpx;
  font-size: 28rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 30rpx;
}

.second_active {
  color: #f66b34;
  background-color: #fff;
  padding-left: 10rpx;
}

.scroll_right {
  height: 100vh;
  box-sizing: border-box;
  padding-top: 100rpx;
}

.rightBox_container {
  display: flex;
  box-sizing: content-box;
  border-bottom: 2rpx solid rgb(231, 231, 231);
  justify-content: space-between;
  padding: 20rpx;
}

.scroll_img {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
}

.scroll_name {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.scroll_btn {
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  font-size: 24rpx;
  color: #fff;
  background-color: #ff8b07;
  flex-shrink: 0;
  align-self: flex-end;
}

.name_price {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10rpx;
}

.scroll_newPrice {
  color: #e93e39;
  font-size: 32rpx;
}
