page {
  padding-bottom: 100rpx;
  width: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
}

/* .countdown_list {
  margin-top: 20rpx;
} */

.countdown_list_showBox {
  display: flex;
  width: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
  border-top: 2rpx solid #ccc;
}

.moveLeft {
  transform: translateX(-120rpx);
  transition: transform 0.5s;
}

.moveRight {
  transition: transform 0.5s;
}

.deleteItem {
  width: 120rpx;
  height: 234rpx;
  line-height: 234rpx;
  margin-top: 7.5rpx;
  color: #fff;
  background-color: #fa7a53;
  flex-shrink: 0;
  text-align: center;
}

.countdown_list>checkbox-group .countdown_list_container {
  padding: 20rpx;
  display: flex;
  /* border-top: 2rpx solid #ccc; */
  width: 100%;
  flex-shrink: 0;
  box-sizing: border-box;
}

.countdown_list image {
  width: 200rpx;
  height: 200rpx;
  padding: 5rpx;
  flex-shrink: 0;
}

.goods_name {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.goods_price {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.btnAndNum {
  display: flex;
}

.middleBox {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  padding: 0 10rpx;
  box-sizing: border-box;
  flex-grow: 2;
}

.countdown_list .button, .item_num {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border: 2rpx solid #ccc;
  flex-shrink: 0;
  font-size: 28rpx;
  color: #ccc;
}

.item_num {
  width: 60rpx;
}

.cart_bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  padding: 0 0 0 20rpx;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  height: 100rpx;
  background-color: #fff;
}

.item_checkbox {
  align-self: center;
  margin-right: 10rpx;
}

.cart_bottom_left {
  display: flex;
  flex-shrink: 0;
  align-items: center;
}

.cart_bottom_left>text {
  color: #909090;
  font-size: 28rpx;
}

.cart_bottom_right {
  flex-shrink: 0;
  background-color: #fa7a53;
  color: #fff;
  font-size: 28rpx;
  margin: 0;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0;
  padding-left: 60rpx;
  padding-right: 60rpx;
  border: none;
}

.cart_bottom_middle {
  flex-grow: 2;
  padding-right: 20rpx;
  text-align: right;
}

.cart_bottom_middle>text:first-child {
  font-size: 32rpx;
  font-weight: bold;
}

.cart_bottom_middle>text:last-child {
  font-size: 28rpx;
}

